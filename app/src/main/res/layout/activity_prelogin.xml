<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/prelogin_lay_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/prelogin_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"        />

    <!--<TextView-->
        <!--android:id="@+id/prelogin_show_log"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="60dp"-->
        <!--android:visibility="gone"-->
        <!--android:clickable="true" />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="183dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="375dp"
            android:layout_height="183dp"
            android:padding="@dimen/dp25"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:srcCompat="@drawable/app_logo_bold"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_very_big" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/vertical_margin"
        android:paddingRight="@dimen/vertical_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/prelogin_btn_login"
                style="@style/ButtonColoredAccent"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="@string/singin" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/prelogin_btn_register"
                style="@style/ButtonColoredAccent"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:text="@string/registration" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/logo_flaticon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp10"
            app:srcCompat="@drawable/ic_flaticon_logo" />

        <ImageView
            android:id="@+id/login_deezer_big"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/dp10"
            android:src="@drawable/deezer_logo_circle" />
    </LinearLayout>
</RelativeLayout>
