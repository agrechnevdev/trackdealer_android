<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:centerColor="@color/colorLightBlue"
                android:endColor="@color/colorLightBlue"
                android:startColor="@color/colorLightBlue" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/colorBlue"
                    android:endColor="@color/colorBlue"
                    android:startColor="@color/colorBlue" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:centerColor="@color/colorAccent"
                    android:endColor="@color/colorAccent"
                    android:startColor="@color/colorAccent" />
            </shape>
        </clip>
    </item>
</layer-list>